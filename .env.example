# ===========================================
# Coincheck API設定
# ===========================================
COINCHECK_API_KEY=your_api_key_here
COINCHECK_API_SECRET=your_api_secret_here

# ===========================================
# NewsAPI設定
# ===========================================
# https://newsapi.org/ で取得
#
# ⚠️ Developerプラン（無料）の制限:
#   - 100リクエスト/日
#   - 24時間遅延（リアルタイムではない）
#   - 過去1ヶ月までの記事のみ
#   - localhostのみCORS有効
#   - 商用利用不可
#
# → キャッシュを30分に設定してリクエスト節約中
NEWS_API_KEY=your_newsapi_key_here

# ===========================================
# 通知設定
# ===========================================
LINE_NOTIFY_TOKEN=your_line_token_here
DISCORD_WEBHOOK_URL=your_discord_webhook_here
ENABLE_LINE_NOTIFY=false
ENABLE_DISCORD_NOTIFY=false

# ===========================================
# 取引設定
# ===========================================
# 1回の最大投資額（円）
MAX_POSITION_JPY=15000
# 最小注文額（円）
MIN_ORDER_JPY=500
# ストップロス（%）
STOP_LOSS_PERCENT=5
# テイクプロフィット（%）
TAKE_PROFIT_PERCENT=10
# 1日の最大損失額（円）
MAX_DAILY_LOSS_JPY=10000

# ===========================================
# シグナル設定
# ===========================================
# 買いシグナル閾値（0〜1）
BUY_THRESHOLD=0.5
# 売りシグナル閾値（-1〜0）
SELL_THRESHOLD=-0.5

# スコア重み付け（合計1.0）
TECHNICAL_WEIGHT=0.4
AI_PREDICTION_WEIGHT=0.3
SENTIMENT_WEIGHT=0.3

# ===========================================
# システム設定
# ===========================================
# メインループ間隔（秒）
MAIN_LOOP_INTERVAL=5
# API制限間隔（秒）
API_RATE_LIMIT=0.3
# 価格履歴保持期間（分）
PRICE_HISTORY_MINUTES=60
# データベースパス
DB_PATH=data/trades.db
# ログレベル
LOG_LEVEL=INFO
# ログファイル
LOG_FILE=logs/trading.log

# ===========================================
# ドライランモード（重要！）
# ===========================================
# true: 注文をシミュレーション（実際には送信しない）
# false: 実際に注文を送信する
DRY_RUN=true

# ===========================================
# AI設定
# ===========================================
USE_CHRONOS=true
CHRONOS_MODEL=amazon/chronos-t5-small
USE_FINBERT=true
FINBERT_MODEL=ProsusAI/finbert
PREDICTION_HORIZON=12
